<Window x:Class="SendCV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Margin="105,70,0,0" Height="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <syncfusion:ButtonAdv Label="Add company" Command="{Binding NavigateToAddCompanyCommand}"
                             FontSize="30" Grid.Column="0"/>


        <syncfusion:ButtonAdv Label="Table" Command="{Binding NavigateToTableCommand}"
                             FontSize="10" Grid.Column="1"/>

    </Grid>
</Window>
