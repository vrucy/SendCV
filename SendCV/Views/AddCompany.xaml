<Window x:Class="SendCV.Views.AddCompany"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendCV.Views"
        mc:Ignorable="d"
        xmlns:inputLayout="clr-namespace:Syncfusion.UI.Xaml.TextInputLayout;assembly=Syncfusion.SfTextInputLayout.WPF"
        Title="AddCompany" Height="558" Width="1178"
         xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <Grid HorizontalAlignment="Left" Margin="0,0,0,22">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="900" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <syncfusion:ButtonAdv Label="Back" Command="{Binding NavigateBackCommand}"
                             FontSize="10" Grid.Column="0" Margin="0,0,80,10"/>


        <StackPanel Grid.Row="2" Margin="0,0,10,-16" Grid.RowSpan="2" >
            <syncfusion:SfTextInputLayout Hint="Enter name company" Width="210">
                <TextBox Text="{Binding CompanyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </syncfusion:SfTextInputLayout>
            <syncfusion:SfTextInputLayout Hint="Enter email company" Width="210">
                <TextBox Text="{Binding CompanyEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </syncfusion:SfTextInputLayout>
            <syncfusion:SfTextInputLayout Hint="Enter name HR" Width="210">
                <TextBox Text="{Binding CompanyNameHR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </syncfusion:SfTextInputLayout>
            <syncfusion:SfTextInputLayout Hint="Enter company country" Width="210">
                <TextBox Text="{Binding CompanyCountry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </syncfusion:SfTextInputLayout>
            <syncfusion:SfTextInputLayout Hint="Enter company address" Width="210">
                <TextBox Text="{Binding CompanyAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </syncfusion:SfTextInputLayout>
        </StackPanel>
            <syncfusion:ButtonAdv Label="Add" Height="29" Grid.Row="3" Width="126" Command="{Binding AddCompanyCommand}"/>

        <syncfusion:SfDataGrid Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Companies}" 
            AutoGenerateColumns="False" AllowSorting="False" x:Name="dataGrid"
                               NavigationMode="Cell"
                                ColumnSizer="Star"
                                SelectionMode="Extended"
                               SelectedItem="{Binding Company}"
                               AllowEditing="True" 
                                ShowRowHeader="True">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridCheckBoxColumn AllowEditing="True" MappingName="Selected" />
                <syncfusion:GridTextColumn MappingName="Name"/>
                <syncfusion:GridTextColumn MappingName="Email"/>
                <syncfusion:GridTextColumn MappingName="Address" />
                <syncfusion:GridTextColumn MappingName="Country"/>
                <!--<syncfusion:GridComboBoxColumn>
                    
                </syncfusion:GridComboBoxColumn>-->
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
        <syncfusion:ButtonAdv x:Name="send" Label="Send" Height="29" Grid.Row="3" Grid.Column="1" Command="{Binding SendCompanyCommand}" RenderTransformOrigin="0.698,0.588" Margin="594,11,180,5"/>
        <syncfusion:ButtonAdv x:Name="delete" Label="Delete" Height="29" Grid.Row="3" Grid.Column="1" Width="126" Command="{Binding DeleteCompanyCommand}" Margin="10,10,764,6"/>
    </Grid>
</Window>
